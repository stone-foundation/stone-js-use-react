{
  "name": "@stone-js/use-react",
  "version": "0.0.2",
  "description": "React view integration for Stone.js, enabling seamless React rendering within the Stone architecture.",
  "author": "Mr. Stone <evensstone@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/stonemjs/use-react.git"
  },
  "homepage": "https://stonejs.dev",
  "bugs": {
    "url": "https://github.com/stonemjs/use-react/issues"
  },
  "keywords": [
    "browser",
    "view",
    "SPA",
    "SSR",
    "React",
    "frontend",
    "Stone.js",
    "rendering"
  ],
  "files": [
    "/dist"
  ],
  "type": "module",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "lint": "ts-standard src",
    "lint:fix": "ts-standard --fix src tests",
    "predoc": "rimraf docs",
    "doc": "typedoc",
    "prebuild": "rimraf dist && npm run doc",
    "build": "rollup -c",
    "test": "vitest run",
    "test:cvg": "npm run test -- --coverage",
    "test:text": "npm run test:cvg -- --coverage.reporter=text",
    "test:html": "npm run test:cvg -- --coverage.reporter=html",
    "test:clover": "npm run test:cvg -- --coverage.reporter=clover",
    "prepare": "husky"
  },
  "peerDependencies": {
    "@stone-js/browser-adapter": "^0.1.0",
    "@stone-js/browser-core": "^0.1.1",
    "@stone-js/config": "^0.1.0",
    "@stone-js/core": "^0.1.1",
    "@stone-js/http-core": "^0.1.2",
    "@stone-js/router": "^0.1.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@rollup/plugin-commonjs": "^28.0.3",
    "@rollup/plugin-multi-entry": "^6.0.1",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.0.0",
    "@types/react": "^19.0.7",
    "@types/react-dom": "^19.0.3",
    "@vitest/coverage-v8": "^3.2.3",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "rimraf": "^6.0.1",
    "rollup": "^4.43.0",
    "rollup-plugin-delete": "^3.0.1",
    "rollup-plugin-dts": "^6.2.1",
    "rollup-plugin-node-externals": "^8.0.0",
    "ts-standard": "^12.0.2",
    "tslib": "^2.8.1",
    "typedoc": "^0.28.5",
    "typedoc-plugin-markdown": "^4.6.4",
    "typescript": "^5.6.3",
    "vitest": "^3.2.3"
  },
  "ts-standard": {
    "globals": [
      "it",
      "expect",
      "describe",
      "beforeEach"
    ]
  }
}
