{
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "strict": true,
    "noEmit": true,
    "allowJs": true,
    "module": "ESNext",
    "target": "ESNext",
    "jsx": "react-jsx",
    "declaration": false,
    "skipLibCheck": true,
    "declarationMap": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "vitest/globals", "vite/client"],
  }
}